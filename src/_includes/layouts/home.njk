---
layout: layouts/base.njk
templateClass: tmpl-home
---

<div class="home">
  <div class="content">
    <div class="intro">
      {{ content | safe }}
    </div>
    
    
    {%- for post in collections.posts.slice(0, 3) -%}
    
    
    {%- set date = post.data.page.date %}
    {%- set url = post.url %}
    {%- set title = post.data.title %}
    {%- set content = post.templateContent %}


    {% include './post-meta.njk' %}

    {%- endfor -%}
    
    <h2>
      More Posts
    </h2>
    <ul>
      {%- for post in collections.posts.slice(3) -%}
        <li{% if page.url == post.url %} aria-current="page"{% endif %}><span class="date">{{ post.data.page.date | htmlDateString }} â€” </span> <a href='{{ post.url }}'>{{ post.data.title }}</a></li>
      {%- endfor -%}
          <a href="/posts">View all posts</a>
    </ul>
  </div>
</div>


